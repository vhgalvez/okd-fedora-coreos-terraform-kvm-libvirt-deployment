variant: flatcar
version: 3.4.0

ignition:
  version: 3.4.0

passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - "${ssh_keys}"
    - name: root
      password_hash: "$6$hNh1nwO5OWWct4aZ$OoeAkQ4gKNBnGYK0ECi8saBMbUNeQRMICcOPYEu1bFuj9Axt4Rh6EnGba07xtIsGNt2wP9SsPlz543gfJww11/"

storage:
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: "${host_name}"
    - path: /home/core/install-oc.sh
      mode: 0755
      contents:
        inline: |
          #!/bin/bash
          set -euo pipefail
          exec >> /home/core/install-oc.log 2>&1

          echo "Starting OpenShift CLI installation"
          mkdir -p /opt/bin
          curl -L -o /tmp/openshift-client-linux.tar.gz https://mirror.openshift.com/pub/openshift-v4/clients/ocp/stable/openshift-client-linux.tar.gz
          tar -xzf /tmp/openshift-client-linux.tar.gz -C /tmp
          mv /tmp/oc /opt/bin/oc
          chmod +x /opt/bin/oc
          rm -f /tmp/openshift-client-linux.tar.gz

          echo 'export PATH=$PATH:/opt/bin' >> /home/core/.bashrc
          echo 'export KUBECONFIG=/home/core/okd-install/auth/kubeconfig' >> /home/core/.bashrc
    - path: /home/core/install-kubelet.sh
      mode: 0755
      contents:
        inline: |
          #!/bin/bash
          set -euo pipefail
          exec >> /home/core/install-kubelet.log 2>&1

          echo "Starting kubelet installation"
          KUBELET_VERSION=$(curl -s https://mirror.openshift.com/pub/openshift-v4/x86_64/clients/ocp/stable/release.txt | grep 'kubernetes ' | awk '{print $2}')
          curl -L -o /tmp/kubelet.rpm https://mirror.openshift.com/pub/openshift-v4/x86_64/dependencies/rpms/kubelet-${KUBELET_VERSION}.x86_64.rpm
          rpm-ostree install /tmp/kubelet.rpm
          ln -sf /usr/bin/kubelet /opt/bin/kubelet
          systemctl daemon-reload
          systemctl enable --now kubelet

systemd:
  units:
    - name: apply-network-routes.service
      enabled: true
      contents: |
        [Unit]
        Description=Apply custom network routes
        After=network-online.target
        Wants=network-online.target

        [Service]
        Type=oneshot
        ExecStart=/usr/bin/systemctl restart systemd-networkd.service
        RemainAfterExit=true

        [Install]
        WantedBy=multi-user.target
    - name: set-hosts.service
      enabled: true
      contents: |
        [Unit]
        Description=Set /etc/hosts file
        After=network.target

        [Service]
        Type=oneshot
        ExecStart=/bin/bash -c 'echo "127.0.0.1 localhost" > /etc/hosts && echo "::1 localhost" >> /etc/hosts && echo "${ip} ${host_name} ${name}" >> /etc/hosts'
        RemainAfterExit=true

        [Install]
        WantedBy=multi-user.target
    - name: install-oc.service
      enabled: true
      contents: |
        [Unit]
        Description=Install OpenShift CLI (oc)
        After=network-online.target
        Wants=network-online.target

        [Service]
        Type=oneshot
        ExecStart=/bin/bash /home/core/install-oc.sh
        RemainAfterExit=true

        [Install]
        WantedBy=multi-user.target
    - name: install-kubelet.service
      enabled: true
      contents: |
        [Unit]
        Description=Install and start kubelet
        After=network-online.target
        Wants=network-online.target

        [Service]
        Type=oneshot
        ExecStart=/bin/bash /home/core/install-kubelet.sh
        RemainAfterExit=true

        [Install]
        WantedBy=multi-user.target